<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rza.firebaseloginpractice.activity.AddNewOfficeActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:text="Enter Office Info"
        android:layout_marginBottom="30dp"
        android:textAlignment="center"
        android:textSize="22sp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp">

    <TextView
        android:text="Office Name: "
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_office_name_add"
        android:layout_marginRight="20dp"
        android:inputType="textCapWords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageButton
        android:src="@drawable/ic_location_on_black_24dp"
        android:background="@android:color/transparent"
        android:id="@+id/btn_location"
        android:layout_gravity="center_horizontal"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="15dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginBottom="15dp"
            android:weightSum="2"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_lat_maps"
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:hint="Lat"
                android:layout_marginRight="10dp"
                android:textSize="13sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_lng_maps"
                android:textSize="13sp"
                android:hint="Lng"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    <ImageView
        android:id="@+id/iv_image_office"
        android:layout_width="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="200dp"
        android:src="@drawable/add_image"
        android:layout_marginBottom="20dp"/>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add_office"
        android:src="@drawable/plus"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>